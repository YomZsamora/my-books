{{#partial "title"}}HomePage{{/partial}}


{{#partial "content"}}
<div class="row">
    <h1>Books Application</h1>
    <div class="col-md-7">
        <p>Please Add an Author to Your Records</p>
        <form action="/postNewAuthor" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label">Author</label>
                <div class="col-sm-6">
                    <input type="text" placeholder="Enter Author's Name" name="authorName" class="form-control" >
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-block">Add Author</button>
        </form>
        <hr>
        <p>Please Add a book to Your Records</p>
        <form action="/postNewBook" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label">Name of Book</label>
                <div class="col-sm-6">
                    <input type="text" placeholder="Enter Book's Name" name="bookName" class="form-control" >
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Book Description</label>
                <div class="col-sm-6">
                    <textarea type="text" placeholder="Enter Book's Description" name="description" class="form-control" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Number of Pages</label>
                <div class="col-sm-6">
                    <span class="ui-spinner ui-widget ui-widget-content ui-corner-all"><input type="text" id="spinner" class="ui-spinner-input" name="noOfPages" autocomplete="off" role="spinbutton" aria-valuenow="0"><a class="ui-spinner-button ui-spinner-up ui-corner-tr" tabindex="-1"><span class="ui-icon ui-icon-triangle-1-n">▲</span></a><a class="ui-spinner-button ui-spinner-down ui-corner-br" tabindex="-1"><span class="ui-icon ui-icon-triangle-1-s">▼</span></a></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Availability</label>
                <div class="col-sm-6">
                    <div class="rdio rdio-success">
                        <input type="radio" name="availability" value="yes" id="yes">
                        <label for="yes">&nbsp;&nbsp;Yes</label>
                    </div>
                    <div class="rdio rdio-danger">
                        <input type="radio" name="availability" value="no" id="no">
                        <label for="no">&nbsp;&nbsp;No</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Select Author</label>
                <div class="col-sm-5">
                    <select class="form-control input-sm mb15" name="bookAuthor">
                        <option value="">-</option>
                        {{#each allAuthors}}
                            <option value="{{id}}">{{authorName}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-success btn-block">Add Book</button>
        </form>
    </div>
    <div class="col-md-5">
        <h3>List of Authors</h3>
        {{#if allAuthors}}
            <p>Here's a list of all the author's in our records:</p>
            <ol>
                {{#each allAuthors}}
                <li>{{authorName}} | <a href="/showAuthorbooks/{{id}}">View Books</a> </li>
                {{/each}}
            </ol>
        {{else}}
            <p class="text-danger">Don't have any author in our records yet!</p>
        {{/if}}
        <hr>
        <h3>List of Books</h3>
        {{#if allBooks}}
            <p>Here's a list of all the books's in our records:</p>
            <ol>
                {{#each allBooks}}
                <li>
                    <h4>{{bookName}} <small>{{noOfPages}} Pages |
                    {{#if availability }} <span class="text-success">Available</span> {{else}} <span class="text-danger">Not Available</span> {{/if}} </small></h4>
                    <p>{{description}}</p>
                </li>
                {{/each}}
            </ol>
        {{else}}
            <p class="text-danger">Don't have any book in our records yet!</p>
        {{/if}}


    </div>
</div>

{{/partial}}

